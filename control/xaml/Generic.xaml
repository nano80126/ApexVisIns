<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrl="clr-namespace:MCAJawIns.Control">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="CustomCard.xaml"/>
        <ResourceDictionary Source="OutlineTextBlock.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type ctrl:CustomCard}" BasedOn="{StaticResource MaterialDesignCustomCard}"/>
    <Style TargetType="{x:Type ctrl:OutlineTextBlock}" BasedOn="{StaticResource OutlineTextBlock}" />
    
</ResourceDictionary>