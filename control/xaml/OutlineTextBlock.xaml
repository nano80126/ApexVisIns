<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrl="clr-namespace:MCAJawIns.Control" 
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
                    xmlns:cvt="clr-namespace:MCAJawIns.Converter">

    <Style x:Key="OutlineTextBlock" TargetType="{x:Type ctrl:OutlineTextBlock}">
        <!--<Setter Value="vert" />-->
        <!--<Setter Property=""-->
        
        
        <Setter Property="Containt">
            <Setter.Value>
                <ControlTemplate>
                    <Border BorderBrush="Black" BorderThickness="1" Background="Red" CornerRadius="10">
                        <TextBlock Text="{Binding Text}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>